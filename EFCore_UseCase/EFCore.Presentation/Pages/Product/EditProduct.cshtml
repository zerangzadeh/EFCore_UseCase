@page
@model EFCore.Presentation.Pages.Product.EditProductModel
@{
}

<form method="post">
    <div class="row">
        <div class="col-md-4 form-group">
            <label asp-for="@Model.Command.ProductName"> نام محصول</label>
            <input class="form-control" asp-for="@Model.Command.ProductName"/>
         </div>
         <div class="col-md-4 form-group">
            <label asp-for="@Model.Command.UnitPrice"> قیمت محصول</label>
            <input class="form-control" asp-for="@Model.Command.UnitPrice"/>
         </div>
         <div class="col-md-4 form-group">
            <label asp-for="@Model.Command.CategoryID"> گروه محصول</label>
           <select asp-items="@Model.ProductCategories" asp-for="@Model.Command.CategoryID" class="form-control">
               <option value="0">گروه محصول</option>
                       
           </select>
         </div>
         <input type="hidden" asp-for="@Model.Command.ProductID" value="@Model.Command.ProductID" />
        <div class="col-md-12 pt-3">
        <button type="submit" class="btn btn-success btn-lg">ویرایش</button>
        </div>

    </div>
</form>

